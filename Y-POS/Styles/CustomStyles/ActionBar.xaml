    <!-- BACK DATA TEMPLATE -->
    <DataTemplate x:Key="ActionBarBackDt">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,5"
                    Orientation="Vertical">
            <Path Style="{StaticResource IconActionBar}"
                  Stretch="Uniform"
                  Data="F1M13.859,0.347C14.313,-0.112 15.053,-0.116 15.514,0.337 15.972,0.796 15.979,1.538 15.521,1.994L3.989,13.634 30.578,13.634C31.223,13.634 31.748,14.159 31.748,14.805 31.748,15.454 31.223,15.978 30.578,15.978L3.965,15.978 15.521,27.646C15.979,28.106 15.972,28.848 15.514,29.304 15.053,29.759 14.313,29.756 13.859,29.293L0.34,15.64C0.113,15.416 0,15.115 0,14.818 0,14.522 0.113,14.221 0.34,13.993z" />
            <TextBlock HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       helpers:TextCaseHelper.TextCase="Upper"
                       Text="{x:Static p:Resources.Back}" />
        </StackPanel>
    </DataTemplate>

    <!-- MENU BUTTON STYLE -->
    <Style x:Key="ActionBarMenuButton" TargetType="Button" BasedOn="{StaticResource ActionBarButton}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource TextColor}" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="ex:StyleExtensions.BgOnHover">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource TextColor}" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate" Value="{StaticResource ActionBarMenuDt}"/>
    </Style>
    
    <!-- BACK BUTTON STYLE -->
    <Style x:Key="ActionBarBackButton" TargetType="Button" BasedOn="{StaticResource ActionBarMenuButton}">
        <Setter Property="ContentTemplate" Value="{StaticResource ActionBarBackDt}"/>
    </Style>

</ResourceDictionary>