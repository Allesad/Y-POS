<UserControl x:Class="Y_POS.Views.CheckoutParts.CheckoutSplittingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Y_POS.Controls"
             xmlns:p="clr-namespace:Y_POS.Core.Properties;assembly=Y-POS.Core"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:ex="clr-namespace:YumaPos.WPF.UI.MarkupExtensions;assembly=YumaPos.WPF.UI"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="404">

    <UserControl.Resources>
        <Style x:Key="SplitSingleAction" TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Height" Value="65"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="IsChecked">
                <Setter.Value>
                    <Binding RelativeSource="{RelativeSource AncestorType=ListBoxItem}" Path="IsSelected"
                             Mode="TwoWay"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--<Style x:Key="SplitExpandableAction" TargetType="ToggleButton" BasedOn="{StaticResource SplitSingleAction}">
            <Setter Property="Template">
                
            </Setter>
        </Style>-->

        <Style x:Key="SplitListItem" TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
            <Setter Property="ex:StyleExtensions.BgOnPressed" Value="Transparent"/>
            <!--<Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ToggleButton Margin="{TemplateBinding Margin}"
                                      Foreground="{TemplateBinding Foreground}"
                                      IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, 
                                        Path=IsSelected, Mode=TwoWay}"
                                      Padding="15"
                                      Height="65"
                                      Content="{Binding}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>-->
        </Style>
    </UserControl.Resources>

    <DockPanel>

        <!-- ACTION BAR -->
        <UniformGrid DockPanel.Dock="Bottom"
                     Columns="2">

            <controls:ActionBarButton Style="{StaticResource ActionBarMainActionButton}"
                                      BorderThickness="0,0,1,0"
                                      BorderBrush="{StaticResource ActionBarBg}"
                                      Title="{Binding Source={x:Static p:Resources.Cancel}, 
                                        Converter={StaticResource UpperCaseCoverter}}" />
            <controls:ActionBarButton Style="{StaticResource ActionBarMainActionButton}"
                                      Title="{Binding Source={x:Static p:Resources.Ok}, 
                                        Converter={StaticResource UpperCaseCoverter}}" />

        </UniformGrid>

        <ListBox Name="SplittingTypesList"
                 ItemContainerStyle="{StaticResource SplitListItem}"
                 SelectionMode="Single"
                 Margin="10">
            <ListBox.Items>
                <ToggleButton Style="{StaticResource SplitSingleAction}"
                              Content="All on One"/>
                <ToggleButton Style="{StaticResource SplitSingleAction}"
                              Content="Evenly"/>
                <ToggleButton Style="{StaticResource SplitSingleAction}"
                              Content="By Seats"/>
                <!--<system:String>All on One</system:String>
                <system:String>Evenly</system:String>
                <system:String>By Seats</system:String>-->
            </ListBox.Items>
        </ListBox>

    </DockPanel>

</UserControl>