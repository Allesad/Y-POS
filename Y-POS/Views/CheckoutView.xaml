<UserControl x:Class="Y_POS.Views.CheckoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Y_POS.Controls"
             xmlns:p="clr-namespace:Y_POS.Core.Properties;assembly=Y-POS.Core"
             xmlns:checkoutParts="clr-namespace:Y_POS.Views.CheckoutParts"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:ex="clr-namespace:YumaPos.WPF.UI.MarkupExtensions;assembly=YumaPos.WPF.UI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Style x:Key="PaymentTypeButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
        </Style>

        <DataTemplate x:Key="OperationListItemDt">

            <DockPanel>

                <!-- ICON -->
                <Path DockPanel.Dock="Left"
                      VerticalAlignment="Center"
                      Data="{Binding Icon}"
                      Height="20"
                      Width="20"
                      Margin="0,0,35,0"
                      Stretch="Uniform"
                      Fill="{StaticResource TextBrush}" />

                <!-- CONTENT -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Text="{Binding Title, Converter={StaticResource UpperCaseCoverter}}"
                        Foreground="{StaticResource ButtonText}"
                        FontSize="12"
                        Margin="0,0,0,10" />

                    <TextBlock Text="{Binding Content}"
                               FontSize="18"
                               Foreground="{StaticResource TextBrush}" />
                </StackPanel>

            </DockPanel>
        </DataTemplate>
        
        <SolidColorBrush x:Key="OperationListSelectionBrush" Color="{StaticResource TextColor}" Opacity="0.8"/>

        <Style x:Key="OperationListItem" TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
            <Setter Property="Padding" Value="35,15,25,15" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="{StaticResource SeparatorBrush}" />
            <Setter Property="ContentTemplate" Value="{StaticResource OperationListItemDt}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <!-- This is used for ListView that does not use GridView -->
                                <ContentPresenter x:Name="ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  Content="{TemplateBinding ContentControl.Content}"
                                                  ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
                                                  ContentStringFormat="{TemplateBinding ContentControl.ContentStringFormat}"
                                                  HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
                                                  SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </Border>

                            <Border Name="SelectionMark"
                                    Background="{StaticResource OperationListSelectionBrush}"
                                    Width="20"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Left"
                                    Visibility="Collapsed">

                                <Path VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Data="{StaticResource GreaterThanIcon}"
                                      Fill="{StaticResource PrimaryBrush}"
                                      RenderTransformOrigin="0.5,0.5"
                                      >
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="180"/>
                                    </Path.RenderTransform>
                                </Path>
                                
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"
                                        Value="{Binding RelativeSource={RelativeSource Self}, 
                                Path=(ex:StyleExtensions.BgOnHover)}" />
                                <Setter Property="Foreground"
                                        Value="{Binding RelativeSource={RelativeSource Self},
                                Path=(ex:StyleExtensions.ForegroundOnHover)}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <!--<Setter Property="Background"
                                        Value="{Binding RelativeSource={RelativeSource Self}, 
                                Path=(ex:StyleExtensions.BgOnPressed)}" />-->
                                <Setter Property="Foreground"
                                        Value="{Binding RelativeSource={RelativeSource Self},
                                Path=(ex:StyleExtensions.ForegroundOnPressed)}" />
                                <Setter TargetName="SelectionMark" Property="Visibility" Value="Visible"/>
                                <Setter Property="BorderBrush" Value="{StaticResource OperationListSelectionBrush}"/>
                                <Setter Property="BorderThickness" Value="0,1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel Grid.IsSharedSizeScope="True">

        <!-- ACTION BAR -->
        <Grid DockPanel.Dock="Bottom"
              Background="{StaticResource ActionBarBg}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="LeftColumn" />
                <ColumnDefinition SharedSizeGroup="CenterColumn" />
                <ColumnDefinition SharedSizeGroup="RightColumn" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" LastChildFill="False">
                <!-- BACK -->
                <controls:ActionBarButton Style="{StaticResource ActionBarBackButton}"
                                          DockPanel.Dock="Left"
                                          Click="OnBackClick" />

                <!-- SEND -->
                <controls:ActionBarButton Style="{StaticResource ActionBarSend}"
                                          DockPanel.Dock="Right" />

                <!-- PRINT -->
                <controls:ActionBarButton Style="{StaticResource ActionBarPrint}"
                                          DockPanel.Dock="Right" />
            </DockPanel>

            <controls:ActionBarButton Grid.Column="1"
                                      Style="{StaticResource ActionBarMainActionButton}"
                                      Title="{Binding Source={x:Static p:Resources.Checkout}, 
                                        Converter={StaticResource UpperCaseCoverter}}" />

            <controls:ActionBarButton Grid.Column="2"
                                      Style="{StaticResource ActionBarNegativeActionButton}"
                                      Title="{Binding Source={x:Static p:Resources.Void}, 
                                        Converter={StaticResource UpperCaseCoverter}}" />

        </Grid>

        <Grid ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource SideColumnWidthGrid}" SharedSizeGroup="LeftColumn" />
                <ColumnDefinition Width="{StaticResource CenterColumnWidthGrid}" SharedSizeGroup="CenterColumn" />
                <ColumnDefinition Width="{StaticResource SideColumnWidthGrid}" SharedSizeGroup="RightColumn" />
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE BACKGROUND -->
            <Border Grid.Column="0"
                    Background="{StaticResource PrimaryBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource SeparatorBrush}" />

            <!-- RIGHT SIDE BACKGROUND -->
            <Border Grid.Column="2"
                    Background="{StaticResource PrimaryBrush}"
                    BorderThickness="1,0,0,0"
                    BorderBrush="{StaticResource SeparatorBrush}" />

            <!-- RECEIPT -->
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="40"
                       Text="{Binding Source={x:Static p:Resources.Receipt}, Converter={StaticResource UpperCaseCoverter}}" />

            <!-- CENTRAL CONTENT -->
            <!--<checkoutParts:CheckoutPaymentView Grid.Column="1" />-->
            <checkoutParts:CheckoutCustomerView Grid.Column="1"/>

            <!-- PAYMENT TYPES -->
            <StackPanel Grid.Column="2">

                <UniformGrid
                    Columns="2"
                    Height="150"
                    Margin="1,0,0,0"
                    VerticalAlignment="Top">

                    <Button Content="CASH"
                            Style="{StaticResource PaymentTypeButton}"
                            BorderBrush="{StaticResource SeparatorBrush}" />
                    <Button Content="CARD"
                            Style="{StaticResource PaymentTypeButton}"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource SeparatorBrush}" />
                    <Button Content="MOBILE"
                            Style="{StaticResource PaymentTypeButton}"
                            BorderBrush="{StaticResource SeparatorBrush}" />
                    <Button Content="GIFT CARD"
                            Style="{StaticResource PaymentTypeButton}"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="0,0,0,1" />

                </UniformGrid>

                <ListBox Name="OperationsList" 
                         ItemContainerStyle="{StaticResource OperationListItem}"/>

            </StackPanel>

        </Grid>

    </DockPanel>

</UserControl>