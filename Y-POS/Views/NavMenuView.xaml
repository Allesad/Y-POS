                        </StackPanel>
                    </ListBoxItem>
                </ListBox.Items>
            </ListBox>

        </StackPanel>

        <Border Background="Black" Opacity="0.3" Visibility="Collapsed">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CommandOutsideClick}" />
            </Border.InputBindings>
        </Border>

    </DockPanel>

</UserControl>